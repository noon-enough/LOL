/* 使用 rpx 替换原来的 rem 单位 */
.equipment-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    margin: 16rpx 20rpx 200rpx;
}

.equipment-list .list-item {
    width: 220rpx;
    height: auto;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
    position: relative;
}

.equipment-list .list-item .equipment-item {
    width: 100%;
    height: 100%;
    background-color: #111419;
    padding-top: 16rpx;
    border: 1px solid #313e4c;
    transition: all linear .2s;
    box-sizing: border-box;
}

.equipment-list .list-item .equipment-item .prop-box {
    width: 100rpx;
    height: 100rpx;
    background-color: #010101;
    margin: 0 auto 16rpx;
    position: relative;
}

.equipment-list .list-item .equipment-item .prop-box .img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}

.equipment-list .list-item .equipment-item .prop-name {
    line-height: 1.2;
    font-size: 28rpx;
    text-align: center;
    color: #fff5e0;
}

.equipment-list .list-item .equipment-item .price {
    text-align: center;
    line-height: 1;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.equipment-list .list-item .equipment-item .price .span {
    display: inline-block;
    vertical-align: middle;
    font-family: dinot-bold;
    font-size: 24rpx;
    color: #b59758;
}
