<view style="width:100%;"  class="table table-border">
    <!-- 表格头 start -->
    <view
        class="thead {{ border ? 'thead-border' : ''}} header-row-class-name"
        style="width:{{ scrolWidth }}rpx; {{ border ? '' : 'border: unset;'}}"
    >
      <view
        wx:for="{{ headers }}"
        wx:key="i"
        wx:for-item="item"
        class="td"
        style="width:{{ item.width }}rpx; {{ border ? '' : 'border-right: unset;'}}"
      >
      {{ item.label }}
      </view>
    </view>
    <!-- 表格头 end -->

    <!-- 表格体 start -->
    <view
        class="tbody"
        style="width:{{ scrolWidth }}rpx; height:{{ height ? height : 'auto' }}; {{ border ? '' : 'border: unset;'}}"
    >
      <block
        wx:if="{{ data.length > 0 }}"
        wx:for-item="it"
        wx:for="{{ data }}"
        wx:key="i"
        wx:for-index="idx"
      >
        <view class="tbody-tr {{ stripe ? 'tbody-tr-stripe' : '' }} {{ border ? 'tbody-tr-border' : ''}} row-class-name">
          <view wx:for-item="head"
            wx:for="{{ headers }}"
            wx:key="j"
            class="td cell-class-name"
            data-it="{{it}}"
            data-row="{{index}}"
            data-column="{{idx+1}}"
            style="width:{{ headers[index].width }}rpx;color:{{ headers[index].color }}; {{head['prop'] === 'hero' ? 'text-align: left;': ''}}"
            bindtap="onRowClick"
          >
              <block wx:if="{{head['prop'] === 'ranking'}}">
                  <view class="order">
                      <view class="num">
                          {{idx + 1}}
                      </view>
                  </view>
              </block>
              <block wx:elif="{{head['prop'] === 'hero'}}">
                  <view class="champion">
                      <l-avatar
                              bind:tap="detail"
                              data-hero-id="{{it.hero_id1}}"
                              shape="circle"
                              size="80"
                              l-class="champion-pic"
                              src="{{it.hero1.avatar}}"/>
                      <view class="name">
                          <view class="nickname">{{it.hero1.nickname ? it.hero1.nickname : it.hero1.title}}</view>
                          <view class="pos">
                              {{it.hero1.roles}}
                          </view>
                      </view>
                  </view>
                  <view class="champion" style="margin-top: 20rpx;">
                      <l-avatar
                              bind:tap="detail"
                              data-hero-id="{{it.hero_id2}}"
                              shape="circle"
                              size="80"
                              l-class="champion-pic"
                              src="{{it.hero2.avatar}}"/>
                      <view class="name">
                          <view class="nickname">{{it.hero2.nickname ? it.hero2.nickname : it.hero2.title}}</view>
                          <view class="pos">
                              {{it.hero2.roles}}
                          </view>
                      </view>
                  </view>
              </block>
              <block wx:elif="{{head['prop'] === 'banrate'}}">
                  <view class="">
                      {{it.banrate1}}
                  </view>
                  <view class="">
                      {{it.banrate2}}
                  </view>
              </block>
              <block wx:else>
                  {{it[head["prop"]]}}
              </block>
          </view>
        </view>
      </block>
      <!-- 列表无数据处理 -->
      <block wx:if="{{ data.length === 0 }}">
        <view class="no-data">{{ msg }}</view>
      </block>
    </view>
    <!-- 表格体 end -->
</view>

